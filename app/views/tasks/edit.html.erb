<div id="header"><h1>Edit Task</h1></div>
<div id="newsub">

<%= form_for @task do |t| %>

  <p>
    <%= t.label :name %>
    <%= t.text_field :name %>
  </p>
	
	
	<p>
    <%= t.label :description %>
    <%= t.text_field :description %>
  </p>
	
	<p>
    <%= t.label :priority %>
    <%= t.text_field :priority %>
  </p>
	
	<p>
    <%= t.label :due_date %>
    <%= t.text_field :due_date %>
  </p>
	
	<%= t.submit %>

<% end %>
</div>
<p>
<%= link_to("Cancel Edit", tasks_path) %></p>
