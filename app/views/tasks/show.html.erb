<div id="header"><h1><%= @task.name %>'s Details</h1></div>
<div id="newsub">


	<p>Name: <%= @task.name %></p>
	<p>Description: <%= @task.description %></p>
	<p>Name: <%= @task.name %></p>
	<p>Priority: <%= @task.priority %></p>
	<p>Due Date: <%= @task.due_date %></p>
  <p>Project: <%= @project.name %></p>
  <p>Tag: <%= @tag.name %></p>
  
	<% if @user.name != nil %>
    <p>Assigned To: <%= @user.name %> </p>
  <% end %>
  
  <% @task.comments.each do |c| %>
  
    <p><%= c.message %></p>
  
  <% end %>
  
  <%= form_for @comments do |c| %>

    <p>
      <%= c.label :message %></p>
    <p>
      <%= c.text_area :message %>
    </p>

    <%= c.submit value: "Create Comment" %>

  <% end %>

</div>

<p><%= link_to("Edit Task Project", edit_task_path) %></p>
<p><%= link_to("Delete Task", task_path, :method => :delete) %></p>

