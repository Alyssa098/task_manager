<div id="header"><h1>Project Details</h1></div>
<div id="newsub">

<h2><%= @project.name %></h2>
    <p>Description: <%= @project.desc %></p>

  <p>Tasks:</br>


      <% @project.tasks.each do |t| %>

        <p><%= link_to(t.name, task_path(t.id))%></p>

      <% end %>

</div>

  <div id="header"><h1>Add a Task for this Project</h1></div>
  <div id="newsub">

  <%= form_for @task do |t| %>

    <p>
      <%= t.label :name %>
      <%= t.text_field :name %>
    </p>
  <p>
      <%= t.label :description %>
      <%= t.text_field :description %>
    </p>
  <p>
      <%= t.label :priority %>
      <%= t.text_field :priority %>
    </p>
  <p>
      <%= t.label :due_date %>
      <%= t.text_field :due_date %>
    </p>

  <p>
      <%= t.label :project %>
      <%= t.collection_select :project_id, Project.all, :id, :name %>
    </p>
  <p>
      <%= t.label :tag %>
      <%= t.collection_select :tag_id, Tag.all, :id, :name %>
    </p>
    <p>
      <%= t.label :assigned_to %>
      <%= t.collection_select :user_id, User.all, :id, :name %>
    </p>

    <p>
    <%= t.submit value: "Create Task" %>

  <% end %>

<%= link_to("Edit Project", edit_project_path) %>
<p><%= link_to("All projects", projects_path)%></p>
<p><%= link_to("Delete Project", delete_project_path, :method => :delete) %></p>

<p><%= link_to('Home', root_path) %></p>