<h1>Existing User Log In</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  
  <%= submit_tag "Log In" %>
<% end %>

<p>Not an existing user? <%= link_to("Click here", new_user_path) %> to create new user account.
<p><%= link_to 'Go Home', root_path %></p>